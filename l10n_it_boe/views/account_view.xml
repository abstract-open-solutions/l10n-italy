<?xml version="1.0" ?>
<openerp>
	<data>

        <record model="ir.ui.view" id="invoice_supplier_form_boe">
             <field name="name">account.invoice.supplier.form.boe</field>
             <field name="model">account.invoice</field>
             <field name="inherit_id" ref="account.invoice_supplier_form"/>
             <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="boe_doc_type" attrs="{'readonly': ['|',('state', '!=', 'draft')]}"/>
                </xpath>
                <xpath expr="//field[@name='period_id']" position="after">
                    <field name="forwarder_boe_invoice_id"
                        domain="[('boe_doc_type', 'in', ['forwarder_invoice']),
                            ('supplier_boe_invoice_id', '=', False)]"
                        attrs="{'invisible': [('boe_doc_type', 'in', ['forwarder_invoice'])]}"/>
                    <field name="supplier_boe_invoice_id"
                        domain="[('boe_doc_type', 'in', ['supplier_invoice']),
                            ('forwarder_boe_invoice_id', '=', False)]"
                        attrs="{'invisible': [('boe_doc_type', 'in', ['supplier_invoice'])]}"/>
                </xpath>
             </field>
        </record>

    </data>
</openerp>
